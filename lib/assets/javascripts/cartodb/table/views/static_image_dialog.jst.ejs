<div class="mamufas">

  <section class="block modal">
    <form>
      <a href="#/close" class="close">x</a>

      <div class="head">
        <h3><%= title %></h3>
        <% if (description) { %>
        <p class="margin5"><%= description %></p>
        <% } %>
      </div>

      <div class="content">

        <div class="row row-2">
          <div class="input_field zoom xxs">
            <label class="uppercase smaller strong lighter">Zoom level</label>
            <input type="text" value="<%= zoom %>" name="zoom" />
          </div>

          <div class="input_field xs">
            <label class="uppercase smaller strong lighter">Width</label>
            <input type="text" value="<%= capture_width %>" name="width" />
          </div>

          <div class="input_field xs">
            <label class="uppercase smaller strong lighter">Height</label>
            <input type="text" value="<%= capture_height %>" name="height" />
          </div>
        </div>

      </div>

      <div class="foot">
        <input type="submit" class="right ok <%= ok_button_classes %>" value="<%= ok_title %>" />
      </div>
    </form>
  </section>

</div>
